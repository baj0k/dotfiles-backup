# i3 config file
set $mod Mod4

# Autostart
exec --no-startup-id i3-msg 'workspace 2; exec firefox; workspace 1'
exec --no-startup-id i3-msg 'exec urxvt'
exec --no-startup-id i3-msg 'exec urxvt -e ranger'
exec --no-startup-id i3-msg 'exec picom -b'
exec --no-startup-id i3-msg 'exec [ ! -s ~/.config/mpd/pid ] && mpd'

# Display
exec --no-startup-id autorandr --change
font pango:monospace 7 
bindcode 232 exec --no-startup-id xbacklight -5%
bindcode 233 exec --no-startup-id xbacklight +5%

# Gaps
for_window [class=".*"] border pixel 2
#smart_gaps on
#gaps inner 10
#gaps outer 1

# Workspaces
workspace "1" output DP2-2
workspace "1" gaps inner 10
workspace "1" gaps outer 2

workspace "2" output DP2-3
workspace "3" output DP2-2
workspace "4" output DP2-2
workspace "5" output DP2-2
workspace "6" output DP2-2 
workspace "7" output DP2-2
workspace "8" output DP2-2
workspace "9" output DP2-2

# Program launcher
bindsym $mod+d exec --no-startup-id dmenu_run

# Screen locker
#exec_always --no-startup-id xautolock -locker '~/.config/i3/locker.sh' -time 3 -corners -0-0 &
bindsym $mod+Control+l exec --no-startup-id "~/.config/i3/locker.sh"

# Screenshot utility
bindsym Print exec --no-startup-id "scrot /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'"
bindsym Shift+Print --release exec --no-startup-id "scrot -s /tmp/screenshot-$(date +%F_%T).png -e 'xclip -selection c -t image/png < $f'"

# Pulseaudio volume bindings
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Window design
title_align center
hide_edge_borders smart

# Start a terminal
bindsym $mod+Return exec --no-startup-id i3-sensible-terminal

# Kill focused window
bindsym $mod+Shift+q kill

# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Split orientation
bindsym $mod+g split h 
bindsym $mod+v split v

# Enter fullscreen mode for the focused container 
bindsym $mod+f fullscreen toggle

# Container layout [stacked, tabbed, toggle split]
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Tiling / floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Focus parent container
bindsym $mod+a focus parent

# Client assignment
assign [class="firefox"] 2
assign [class="code"] 3

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec --no-startup-id i3-msg exit

# Resize window
mode "resize" {
        bindsym l resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize grow width 10 px or 10 ppt
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#Start i3bar to display a workspace bar
bar {
    output primary
    tray_output primary
    status_command i3status -c ~/.config/i3/i3status.conf
    mode dock
    position top
    strip_workspace_numbers no
    font monospace 10
    separator_symbol ")("
}
